/* pages/2048/2048.wxss */
.container {
  color: #776e65;
  background-color: #faf8ee;
  height: 100vh;
  position: relative;
} 
.head {
  text-align: center;
  position: absolute;
  top: 7vh;
}
.lside {
  width: 130px;
  height: 100px;
  box-sizing: border-box;
  float: left;
  position: relative;
  margin-right: 30px;
}
.title {
  font-size: 40px;
  font-weight: bold;  
  position: absolute;
  bottom: 50px;
  left: 10px;
}
.play {
  font-size: 30px;
  background-color: #bbada0;
  color: #fff;
  border-radius: 5px;
  width: 130px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  left: 0;
}
.score {
  color: #fff;
}

.rside {
  background-color: #bbada0;
  float: right;
  width: 100px;
  height: 100px; 
  padding-top: 10px;
  box-sizing: border-box;
  border-radius: 5px; 
  opacity: 0.7;
}
.rside text {
  display: block;
  text-align: center;
  font-size: 30px;
  font-weight: bold;
}